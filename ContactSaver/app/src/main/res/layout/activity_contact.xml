<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="60dp"
        android:text="@string/enter_contact_details"
        android:textAlignment="center"
        android:textSize="35sp"
        tools:ignore="TextSizeCheck"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:background="@color/teal_200"
        android:inputType="textPersonName"
        android:hint="@string/enter_contact_name"
        android:textAlignment="center"
        android:id="@+id/name"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/baseline_person_24"
         />
    <EditText
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:background="@color/teal_200"
        android:inputType="number"
        android:hint="@string/enter_number"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/number"
        android:drawableEnd="@drawable/baseline_contact_phone_24" />


    <Button
        android:id="@+id/save"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#00EF80"
        android:text="@string/click_to_save"
        android:textSize="38sp"
        tools:ignore="TextSizeCheck" />
</LinearLayout>