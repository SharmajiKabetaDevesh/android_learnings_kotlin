<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F98054"
    tools:context=".SetData">

    <ImageView
        android:id="@+id/tp"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/upperbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="TODO" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#ffffff"
        android:gravity="center"
    app:layout_constraintTop_toBottomOf="@+id/tp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/source"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:hint="Enter Source"
            android:textColorHint="#757575"
            android:inputType="text"/>

        <EditText
            android:id="@+id/destination"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="Enter Destination"
            android:textColorHint="#757575"
            android:inputType="text"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="Enter Time as 08:52 format"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:inputType="text"/>

        <EditText
            android:id="@+id/time"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="Enter Time"
            android:textColorHint="#757575"
            android:inputType="text"
        />

        <Button
            android:id="@+id/savebut"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#F98150"
            android:layout_marginTop="20dp"
            android:text="@string/save_data"

            />



        <Button
            android:layout_marginStart="100dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            android:backgroundTint="#F98150"
            android:id="@+id/clear"
            android:text="@string/clear_data"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>